---
import Header from "@/components/Header";
import Sidebar from "@/components/Sidebar.astro";
import Footer from "@/components/Footer.astro";

import "@/styles/global.css";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="flex h-fit min-h-screen flex-col gap-y-6 md:gap-y-12">
      <Header  client:load/>
     <main class="mx-auto flex w-full max-w-3xl grow px-6 gap-x-6 md:gap-x-18">
      <!-- Main Content Column -->
  <div class="flex min-w-0 grow md:basis-2/3 flex-col gap-y-1">
    <slot />
  </div>

  <!-- Sidebar -->
  <Sidebar class="hidden md:block md:basis-1/3" />
</main>
      <Footer />
    </div>
  </body>
</html>
