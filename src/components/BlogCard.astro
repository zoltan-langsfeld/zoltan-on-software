---
import type { CollectionEntry } from "astro:content"; 
import { formatDate } from "@/lib/utils";
import { Image } from "astro:assets";
import paper from "../content/blog/2024-03/blogPost.png";

const { entry } = Astro.props;
console.log("BlogCard entry:", entry.data.image);
const formattedDate = formatDate(entry.data.pubDate);
---
<li class="hover:bg-foreground/15 rounded-xl border p-4 transition-colors duration-300 ease-in-out">
  <a href={`/${entry.collection}/${entry.slug}`} class="flex flex-col gap-4 sm:flex-row sm:items-center">
   {
    entry.data.image && (
      <div class="w-full sm:w-1/3 sm:shrink-0">
      <Image
        src= {paper}
        alt={entry.data.title}
        class="object-cover"
        loading="lazy"
        />
        </div>
    )
   } 
   <div class="text-left">
     <em class="font-mono text-secondary-text text-xs mb-2 font">{formattedDate}</em>
      <h3 class="font-display text-lg md:text-xl font-medium mb-1">{entry.data.title}</h3>
      <p class="text-base">{entry.data.description}</p>
    </div>
  </a>
</li>
    