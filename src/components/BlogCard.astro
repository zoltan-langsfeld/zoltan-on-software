---
import type { CollectionEntry } from "astro:content";
import { formatDate } from "@/lib/utils";
import { Image } from "astro:assets";

interface Props {
	entry: CollectionEntry<"blog">;
}

const { entry } = Astro.props;
const formattedDate = formatDate(entry.data.pubDate);
---
<li class="hover:bg-foreground/15 rounded-xl border p-4 transition-colors duration-300 ease-in-out h-2xl">
  <a href={`/${entry.collection}/${entry.slug}`} class="flex flex-col gap-4 sm:flex-row sm:items-center">
   {
    entry.data.image && (
      <Image
        src={entry.data.image}
        alt={entry.data.title}
        class="w-full sm:w-1/3 h-auto rounded-lg object-cover"
        loading="lazy"
        width={300}
        height={200} />
    )
   } 
   <div class="flex-grow">
      <h2 class="text-xl md:text-2xl font-semibold mb-1">{entry.data.title}</h2>
      <em class="text-sm text-muted mb-1">{formattedDate}</em>
      <p class="text-base text-secondary-text">{entry.data.description}</p>
    </div>
  </a>
</li>
    